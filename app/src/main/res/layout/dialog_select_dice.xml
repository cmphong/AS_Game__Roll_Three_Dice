<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="40dp"
    android:background="@drawable/bg_grey700_radius_20"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv_dialog_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_1"
            />
        <ImageView
            android:id="@+id/iv_dialog_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_2"
            android:layout_marginHorizontal="20dp"
            />
        <ImageView
            android:id="@+id/iv_dialog_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_3"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/iv_dialog_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_4"
            />
        <ImageView
            android:id="@+id/iv_dialog_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_5"
            android:layout_marginHorizontal="20dp"
            />
        <ImageView
            android:id="@+id/iv_dialog_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_6"
            />
    </LinearLayout>



    <ImageView
        android:id="@+id/iv_dialog_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_7"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>